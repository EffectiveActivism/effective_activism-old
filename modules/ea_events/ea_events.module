<?php

/**
 * @file
 * Contains ea_events.module.
 */

use Drupal\Core\Form\FormStateInterface;

/**
 * Implements hook_form_alter().
 */
function ea_events_form_alter(&$form, FormStateInterface $form_state, $form_id) {
  if ($form_id == 'event_repeater_edit_form' || $form_id == 'event_repeater_add_form') {
    // Hide fields when no repeat is chosen.
    $form['repeat_every']['#states'] = array(
      'invisible' => array(
        ':input[name="repeats"]' => array('value' => 'none'),
      ),
    );
    $form['ends']['#states'] = array(
      'invisible' => array(
        ':input[name="repeats"]' => array('value' => 'none'),
      ),
    );
    $form['repeat_on']['#states'] = array(
      'invisible' => array(
        ':input[name="repeats"]' => array('value' => 'none'),
      ),
    );
    $form['repeat_by']['#states'] = array(
      'invisible' => array(
        ':input[name="repeats"]' => array('value' => 'none'),
      ),
    );
    $form['occurences']['#states'] = array(
      'invisible' => array(
        ':input[name="repeats"]' => array('value' => 'none'),
      ),
    );
    $form['on']['#states'] = array(
      'invisible' => array(
        ':input[name="repeats"]' => array('value' => 'none'),
      ),
    );
    // Only show field repeat_on when field repeats is 'weekly'.
    $form['repeat_on']['#states'] = array(
      'visible' => array(
        ':input[name="repeats"]' => array('value' => 'weekly'),
      ),
    );
    // Only show field repeat_by when field repeats is 'monthly'.
    $form['repeat_by']['#states'] = array(
      'visible' => array(
        ':input[name="repeats"]' => array('value' => 'monthly'),
      ),
    );
    // Only show field occurences when field ends is 'after'.
    $form['occurences']['#states'] = array(
      'visible' => array(
        ':input[name="ends"]' => array('value' => 'after'),
        ':input[name="repeats"]' => array('!value' => 'none'),
      ),
    );
    // Only show field on when field ends is 'on'.
    $form['on']['#states'] = array(
      'visible' => array(
        ':input[name="ends"]' => array('value' => 'on'),
        ':input[name="repeats"]' => array('!value' => 'none'),
      ),
    );
  }
}
