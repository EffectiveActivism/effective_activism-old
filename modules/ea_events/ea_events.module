    'visible' => array(
      ':input[name="' . $extra_identifier . $startBracket . 'event_ends' . $endBracket . '"]' => array('value' => 'on'),
      ':input[name="' . $extra_identifier . $startBracket . 'event_repeats' . $endBracket . '"]' => array('!value' => 'none'),
    ),
  );
  return $form;
}
